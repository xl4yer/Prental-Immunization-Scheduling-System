<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
	<br /><br />
	<MudDrawerHeader Class="img">
		<MudAvatar Color="Color.Inherit" Style="height:120px; width:120px;"  Image="logo.png" />
		<MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;"></MudText>
	</MudDrawerHeader>
	<br /><br />
	<MudNavMenu>
		<MudNavLink Href="/dashboard" Icon="@Icons.Filled.List">DAshboard</MudNavLink>
		<MudNavGroup Title="Prenatal" Icon="@Icons.Filled.PregnantWoman" Expanded="true" IconColor="Color.Secondary">
			<MudNavLink Href="/info" Icon="@Icons.Filled.Info" IconColor="Color.Success">Information</MudNavLink>
			<MudNavLink Href="/addpresched" Icon="@Icons.Filled.CalendarToday" IconColor="Color.Primary">Add Schedule</MudNavLink>
			<MudNavGroup Title="Vaccine" Icon="@Icons.Filled.Vaccines" Expanded="true">
				<MudNavLink Href="/teta1" Icon="@Icons.Filled.Vaccines">Tetanus 1st Dose</MudNavLink>
				<MudNavLink Href="/teta2" Icon="@Icons.Filled.Vaccines">Tetanus 2nd Dose</MudNavLink>
			</MudNavGroup>
		</MudNavGroup>
		<MudNavGroup Title="Immunization" Icon="@Icons.Filled.ChildCare" Expanded="true" IconColor="Color.Secondary">
			<MudNavLink Href="/child" Icon="@Icons.Filled.Info" IconColor="Color.Success">Information</MudNavLink>
			<MudNavLink Href="/addimmsched" Icon="@Icons.Filled.CalendarToday" IconColor="Color.Primary">Add Schedule</MudNavLink>
			<MudNavGroup Title="Vaccine" Icon="@Icons.Filled.Vaccines" Expanded="true">
				<MudNavLink Href="/bcg" Icon="@Icons.Filled.Vaccines">BCG</MudNavLink>
				<MudNavLink Href="/penta1" Icon="@Icons.Filled.Vaccines">Penta 1st Dose</MudNavLink>
				<MudNavLink Href="/penta2" Icon="@Icons.Filled.Vaccines">Penta 2nd Dose</MudNavLink>
				<MudNavLink Href="/penta3" Icon="@Icons.Filled.Vaccines">Penta 3rd Dose</MudNavLink>
				<MudNavLink Href="/bopv1" Icon="@Icons.Filled.Vaccines">BOPV 1st Dose</MudNavLink>
				<MudNavLink Href="/bopv2" Icon="@Icons.Filled.Vaccines">BOPV 2nd Dose</MudNavLink>
				<MudNavLink Href="/bopv3" Icon="@Icons.Filled.Vaccines">BOPV 3rd Dose</MudNavLink>
				<MudNavLink Href="/ipv1" Icon="@Icons.Filled.Vaccines">IPV 1st Dose</MudNavLink>
				<MudNavLink Href="/ipv2" Icon="@Icons.Filled.Vaccines">IPV 2nd Dose</MudNavLink>
				<MudNavLink Href="/mcv1" Icon="@Icons.Filled.Vaccines">MCV 1st Dose</MudNavLink>
				<MudNavLink Href="/mcv2" Icon="@Icons.Filled.Vaccines">MCV 2nd Dose</MudNavLink>
				<MudNavLink Href="/pcv131" Icon="@Icons.Filled.Vaccines">PCV13 1st Dose</MudNavLink>
				<MudNavLink Href="/pcv132" Icon="@Icons.Filled.Vaccines">PCV13 2nd Dose</MudNavLink>
				<MudNavLink Href="/pcv133" Icon="@Icons.Filled.Vaccines">PSV13 3rd Dose</MudNavLink>
			</MudNavGroup>
		</MudNavGroup>
		<MudNavLink Href="/settings" Icon="@Icons.Filled.Settings">Settings</MudNavLink>
	</MudNavMenu>
</MudDrawer>

<style>
	.img{
		display: flex;
		justify-content: center; /* Center horizontally */
		align-items: center; /* Center vertically */
	}
</style>

@code {
	[Parameter]
	public bool SideBarOpen { get; set; }
}